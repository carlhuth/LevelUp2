<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/shadow_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="8dp"
        android:id="@+id/landmark_container"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="44dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/landmark_description"
            android:text="Samsung Building Kormangala"
            android:maxLines="3"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="4dp"
            android:id="@+id/landmark_latlong"
            android:text="58.1234, 118.3523423"
            android:maxLines="2"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageButton
        style="@style/Button.ImageButton"
        android:id="@+id/landmark_remove_btn"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/icon_trash"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="48dp"
        android:layout_height="48dp" />



</RelativeLayout>